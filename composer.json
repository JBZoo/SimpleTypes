{
    "name"              : "jbzoo/simpletypes",
    "type"              : "library",
    "description"       : "The universal PHP library to convert any values and measures",
    "license"           : "MIT",
    "keywords"          : [
        "converter",
        "acceleration",
        "area",
        "degree",
        "info",
        "length",
        "money",
        "number",
        "pressure",
        "speed",
        "temperature",
        "time",
        "volume",
        "weight"
    ],
    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php"         : "^8.1",
        "jbzoo/utils" : "^7.0"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^7.0"
    },

    "autoload"          : {
        "psr-4" : {"JBZoo\\SimpleTypes\\" : "src"}
    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"},
        "files" : ["tests/phpunit-functions.php"]
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
